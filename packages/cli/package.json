{
	"name": "@kevintyj/pss-cli",
	"version": "1.0.0",
	"description": "Command-line interface for PSS",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
