{
	"name": "@kevintyj/pss-server",
	"version": "1.0.0",
	"description": "Static file server for PSS",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "rm -rf dist && esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --sourcemap --external:get-port --external:serve-static --external:@kevintyj/pss-types && npm run build:types",
		"build:types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist --moduleResolution node --esModuleInterop --skipLibCheck",
		"dev": "tsx src/index.ts",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check ."
	},
	"dependencies": {
		"get-port": "^7.1.0",
		"serve-static": "^2.2.0",
		"@kevintyj/pss-types": "workspace:*"
	},
	"devDependencies": {
		"@types/node": "^24.0.13",
		"@types/serve-static": "^1.15.8",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"server",
		"static",
		"http"
	],
	"author": "",
	"license": "BSD-3-Clause"
}
